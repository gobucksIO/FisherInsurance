@{
    ViewData["Title"] = "File a Claim";
}

<h1>File a Claim</h1>
<form>
    <div class="form-group">
        <label>Policy Holder Name:</label>
        <input type="text" class="form-control" id="claimPolicyHolder" placeholder="Policy Holder Name">
    </div>
    <div class="form-group">
        <label>Policy Number:</label>
        <input type="text" class="form-control" id="claimPolicyNumber" placeholder="Policy Number">
    </div>
    <div class="form-group">
        <label>Date of loss:</label>
        <input type="date" class="form-control" id="claimDateOfLoss">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>